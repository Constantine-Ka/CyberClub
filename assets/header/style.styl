@import "../theme/font/american_captain_cyrillic.css"
.header5-custom
    // margin-top: 70px
    width 100vw
    height 100vh
    background-color: gold
    .bg-img
        width 100%
        position absolute
        height 80%
        bottom 0
        .mt-20vh
            position absolute
            top -20vh
        .left
        .right
            position absolute
            width 640px 
            height: 100%
            z-index 4
            
            @media screen and (max-width: 745px)
                display none    
        .left 
            left: 40px;
            background url('../images/mainblock/kisspng-gas-mask-apocalyptic-fiction-eddie-rotten-s-freque-specific-elements-end-of-days-weekend-film-chall-5b80764f4ee4f9.3439306415351455513232.png')
            background-size: cover
            transform: scaleX(-1)
            z-index 8
            
        .left-before
            left: 40px;
            background: url('../images/mainblock/left-before.png')
            width 406px
            filter: brightness(0);
            height 170px
            @media screen and (max-width: 745px)
                display none 
        .left-after
            left: 40px;
            position absolute
            width 518px
            height 338px
            background: url('../images/mainblock/left-after.png')   
            z-index 10
            filter: brightness(0);
            bottom: 0
            @media screen and (max-width: 745px)
                display none 
        .right
            right 10px
            background url('../images/mainblock/favpng_deus-ex-human-revolution-deus-ex-mankind-divided-deus-ex-invisible-war-xbox-360.png') 
            background-size cover
            bottom: 0
        .right-before
            filter: brightness(0);
            right 80px
            background url('../images/mainblock/right-before.png') 
            width 472px
            height 400px
            @media screen and (max-width: 745px)
                display none 
        .right-after
            position absolute
            right 80px
            width 324px
            height 162px
            background: url('../images/mainblock/right-before2.png')
            bottom: 0
            z-index 5
            filter: brightness(0);
            @media screen and (max-width: 745px)
                display none 
        .bg 
            transform:translate(0%, 0%);
            position absolute
            bottom: 0
            right 20%
            width 500px
            height 100%
            background: url("../images/mainblock/dlya_sayta.svg") no-repeat;
            background-size: cover
            opacity 0.34
            z-index 2
    .basic-content
        font-weight: bold
        position absolute
        transform:translate(-50%, -55%);
        left 50%
        top 50%
        width 1000px
        height 70% 
        text-align: center
        z-index: 3
        .bg 
            transform:translate(0%, 0%);
            position absolute
            bottom: 0
            right 0
            width 400px
            height 100%
            // background url('../images/mainblock/content-bg.png') no-repeat 
            background-size: cover
            z-index 1
        .logo
            position relative 
            width 300px
            height: 215px
            margin: 0 auto
            
            img 
                margin 0 auto
                width 150px
                height: 150px
            p 
                text-align: center
                font-size: 30pt
                font-family 'American Captain Cyrillic' 
                text-transform: uppercase
                color #000
                // background url('../images/mainblock/title-bg.png') no-repeat
                background-size: cover
        .title
            width 100%
            font-size: 90px
            font-family 'American Captain Cyrillic' 
            text-transform: uppercase
            color #000
            @media screen and (max-width: 800px)
                font-size 45px
        .workTime
            width 100%

            font-family 'American Captain Cyrillic' 
            text-align center
            font-size 34pt
            @media screen and (max-width: 800px)
                font-size 17px
           
        @media screen and (max-width: 800px)
            width 90%
            // .link-modal
                // display none
        @media (min-width: 800px)
            .link-phone
                display none